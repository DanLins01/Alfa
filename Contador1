import random
import statistics
media = 0
maior = aux = 0
contP = 0
contN = 0
menor = 100
lista = []
for cont in range (0,50):
    aux = int (random.randint(-10,10))
    media += aux
    lista.append (aux)
    if (aux > 0):
        contP += 1
        maior = aux
    if (aux < 0):
        contN += 1
        
print(f" A média é {round((media / cont),2)}")
print(f" Quantidade de valores positivos : {contP}")
print(f" Quantidade de valores positivos : {contN}")
print(lista)
