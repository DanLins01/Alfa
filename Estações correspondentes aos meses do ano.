outono = 4,6
inverno = 7,9
primavera = 10,12
verao = 1,3   
print(":::::::::::::::::: -ESTAÇÕES CORRESPONDENTE AOS MESES DO ANO- :::::::::::::::::::::::::::::")

num = int(input("Digite o número do mês : "))
if (num == 4,6):
    print(f"A estação do ano referente ao mês {num} é Outono.")
elif (num == 7,9):
    print(f"A estação do ano referente ao mês {num} é inverno.")
elif (num == 10,12):
    print(f"A estação do ano referente ao mês {num} é primavera.")
elif (num == 1,3):
    print(f"A estação do ano referente ao mês {num} é verão.")
print("Considere a estação prevalente para cada mês:\n a) Janeiro (1): verão\n b) fevereiro (2): verão\n c) Março (3): verão\n d) Abril (4): Outono\n e) Maio (5): Outono\n f) Julho(7): Outono\n g) Agosto (8): Inverno\n h) Setembro (9): inverno\n i) Outubro (10): primavera\n j) novembro (11): Primavera\n k) Dezembro (12): primavera")
print(":::::::::::::::::::::::::::::::-FIM DO PROGRAMA-::::::::::::::::::::::::::::::::::::::::::::")
